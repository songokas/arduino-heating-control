ARDUINO_DIR = $(HOME)/install/arduino-1.8.9

USER_LIB_PATH=$(realpath ../arduino-link)

ARDUINO_LIBS = Acorn128 AuthenticatedCipher Cipher Crypto CryptoLW DallasTemperature Entropy OneWire RF24 RF24Mesh RF24Network Streaming Time Timezone SPI RadioEncrypted Heating Heating/Domain RadioEncrypted/Entropy LowPower ArduinoJson EEPROM Ethernet

